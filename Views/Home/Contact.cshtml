@model NuJournalPro.Models.ViewModels.ContactUs

@{
    ViewData["Title"] = "Contact Us";
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        <p>Want to get in touch? Fill out the form below to send us a message and we'll get back to you as soon as possible!</p>
        <div class="my-5">
            <form asp-action="Contact" asp-controller="Home">
                <div class="form-floating">
                    <input asp-for="@Model.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="@Model.Name"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                    <label asp-for="@Model.Email"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Phone" class="form-control" autocomplete="phone" aria-required="false" />
                    <label asp-for="@Model.Phone"></label>
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.Subject" class="form-control" autocomplete="off" aria-required="true" />
                    <label asp-for="@Model.Subject"></label>
                    <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                </div>
                <div class="form-floating mt-4">
                    <textarea asp-for="@Model.Message" rows="5" class="form-control" autocomplete="off" aria-required="true"></textarea>
                    <span asp-validation-for="@Model.Message" class="text-danger"></span>
                </div>
                <div id="success"></div>
                <div class="mt-4 text-end">
                    <button id="sendMessageButton" type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#Message').summernote();
    </script>
    <!--Sweet Alerts-->
    <script>
        let message = '@(ViewBag.SwalMessage)';

        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            })
        }
    </script>
}